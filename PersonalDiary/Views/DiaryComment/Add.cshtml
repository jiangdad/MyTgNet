
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

@model PersonalDiary.Models.UserDiaryModel
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<form action="/DiaryComment/Add" method="post">
    <table>
        <tr>
            <th>@Html.DisplayFor(m => m.CreateTime)</th>
        </tr>
        <tr>
            <th>@Html.DisplayFor(m => m.UserName)</th>
        </tr>
        <tr>
            <td style="text-align:center;vertical-align:middle;">标题</td>
            <td><input name="Title" id="input_Title" value="@Model.Title" /></td>
        </tr>
        <tr>
            <td style="text-align:center;vertical-align:middle;">内容</td>
            <td>
                <textarea name="Content" id="textarea_Content" placeholder="请输入日志内容，不少于5个字" maxlength="800" onforminput="3" cols=40 rows=10 style="overflow:auto" readonly="readonly"
                          text-align:center background-color:BFCEDC>@Model.Content</textarea>
            </td>
        </tr>
        <tr>
            <td style="text-align:center;vertical-align:middle;">评论</td>
            <td>
                <textarea name="CommentContent" id="textarea_comment" placeholder="请输入评论，不少于5个字" maxlength="800" onforminput="3" cols=80 rows=3 style="overflow:auto"
                           background-color:BFCEDC></textarea>
            </td>
        </tr>
        <tr>
            <td>
                <input type="text" value="@ViewBag.DiaryId" style="display:none" name="DiaryId" />
            </td>
          <td><input type="submit" /></td>  
            
        </tr>
       
    </table>

   
  
  
</form>

